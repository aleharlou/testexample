:javascript
  function hide_all(){
    $('.equation').each(function(){
      $(this).hide();
    });
  }
  function test_function1(){
    hide_all();
    $('#eq1').show();
  }
  function test_function2(){
    hide_all();
    $('#eq2').show();
  }
  function test_function3(){
    hide_all();
    $('#eq3').show();
  }

:css
  .form{
    margin-bottom:30px;
  }
  .button{
    border:1px solid red;
    padding:10px;
  }

= link_to 'Show Equation 1', '#', :class=>:button, :onclick => 'test_function1(); return false;'
= link_to 'Show Equation 2', '#', :class=>:button, :onclick => 'test_function2(); return false;'
= link_to 'Show Equation 3', '#', :class=>:button, :onclick => 'test_function3(); return false;'

%p
.equation#eq1{:style=>'display:none'}
  Equation 1
  = form_tag('/posts') do
    = text_field 'arg1', 'arg1', :size => "20", :placeholder => "argument 1"
    = text_field 'arg2', 'arg2', :size => "20", :placeholder => "argument 2"
    = button_tag 'Submit'

