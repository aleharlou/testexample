  Equation 2
  = form_tag('/posts') do
    = text_field 'arg1', 'arg1', :size => "20", :placeholder => "argument 1"
    = text_field 'arg2', 'arg2', :size => "20", :placeholder => "argument 2"
    = text_field 'arg3', 'arg3', :size => "20", :placeholder => "argument 3"
